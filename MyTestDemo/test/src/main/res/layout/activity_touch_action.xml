<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_dpi"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="@color/color_item_press"
                android:layout_height="1000dp"/>
        </LinearLayout>
    </ScrollView>

        <com.example.test.mytestdemo.ui.MyButton
            android:id="@+id/btn_test"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@color/test"
            android:gravity="center"
            android:padding="10dp"
            android:text="悬浮"/>



    <ListView
        android:id="@+id/sticky_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_hight"
        android:background="#c0e4"
        android:visibility="gone"/>


</RelativeLayout>


