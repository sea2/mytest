<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pb_test"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="40dp"
                android:max="100"
                android:progress="40"
                android:progressDrawable="@drawable/progressbar_color"
                android:secondaryProgress="90"
                />

            <!-- android:isIndicator  RatingBar是否是一个指示器（用户无法进行更改）
                 android:numStars     显示的星型数量，必须是一个整形值，像“100”。
                 android:rating       默认的评分，必须是浮点类型，像“1.2”。
                 android:stepSize     评分的步长，设置进度的最小幅度，必须是浮点类型，像“1.2”。-->
            <RatingBar
                android:id="@+id/id_fragment_myself_vip_rating"
                style="@style/vipRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5"/>

            <Button
                android:id="@+id/btn_notification"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="通知"/>

            <Button
                android:id="@+id/btn_webview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="webview"/>

            <Button
                android:id="@+id/btn_horizontalscrollView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="横向scrollview"/>

            <Button
                android:id="@+id/btn_thread"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="线程"/>

            <Button
                android:id="@+id/btn_broadcast"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="广播"/>

            <Button
                android:id="@+id/btn_aidl"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="aidl"/>

            <Button
                android:id="@+id/btn_service"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="service"/>

            <Button
                android:id="@+id/btn_swipeback"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="右滑关闭"/>

            <Button
                android:id="@+id/btn_animation"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="动画"/>

            <Button
                android:id="@+id/btn_spannable_String"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="SpannableStringBuilder"/>

            <Button
                android:id="@+id/btn_socket_main"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="socket"
                android:textAllCaps="false"/>

            <com.example.test.mytestdemo.ui.FlowLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_flag_01"
                    android:text="Welcome"/>

                <TextView
                    style="@style/text_flag_01"
                    android:text="IT工程师"/>

                <TextView
                    style="@style/text_flag_01"
                    android:text="学习ing"/>

                <TextView
                    style="@style/text_flag_01"
                    android:text="恋爱ing"/>

                <TextView
                    style="@style/text_flag_01"
                    android:text="挣钱ing"/>

                <TextView
                    style="@style/text_flag_01"
                    android:text="努力ing"/>

                <TextView
                    style="@style/text_flag_01"
                    android:text="I thick i can"/>
            </com.example.test.mytestdemo.ui.FlowLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>