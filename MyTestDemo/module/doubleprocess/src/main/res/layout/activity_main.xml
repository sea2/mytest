<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<Button
    android:id="@+id/btn_start"
    android:layout_width="wrap_content"
    android:onClick="start"
    android:text="启动"
    android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_stop1"

        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/btn_start"
        android:onClick="stop_local"
        android:text="停止本地"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_stop2"
        app:layout_constraintLeft_toRightOf="@+id/btn_stop1"
        android:layout_width="wrap_content"
        android:onClick="stop_remote"
        android:text="停止Remote"
        android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>